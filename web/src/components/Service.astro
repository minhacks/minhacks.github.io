---
import Icon from "./Icon.astro";
import Link from "./Link.astro";

const { content, iconType, linkText, linkType, title, url } = Astro.props;
---

<div>
  <div class="divider"></div>
  <div class="flex flex-col gap-2">
    <div class="flex flex-col gap-4">
      <Icon icon={iconType} size="size-8" />
      <h1 class="text-lg">{title}</h1>
    </div>
    <div class="text-gray-400">
      {content}
    </div>
    {
      linkText && (
        <div class="mt-6">
          <Link linkType={linkType} linkText={linkText} url={url} />
        </div>
      )
    }
    <slot />
  </div>
</div>
